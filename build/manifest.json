{
  "manifest_version": 2,
  "name": "MDN Uptime",
  "description": "This addon shows the time for any MDN website to come up",
  "version": "1.0",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Show MDN speed",
     "default_icon": {
      "96": "logo_96.png"        
    }
  },
  "background": {
    "scripts": ["app/background.js"]
  },
  "icons": {
    "48": "logo_48.png",
    "96": "logo_96.png"
  },
  "permissions": [
    "webRequest",
    "*://developer.mozilla.org/"
  ]
}